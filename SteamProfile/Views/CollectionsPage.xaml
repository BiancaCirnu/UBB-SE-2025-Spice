<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.CollectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SteamProfile.Models" xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="COLLECTIONS" 
                  FontSize="30" 
                  FontWeight="Bold" 
                  TextAlignment="Center"
                  Margin="20"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center"
                        Padding="20">
                <!-- Create Collection Button -->
                <Button Content="Create Collection"
                        Click="CreateCollection_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,20"/>

                <!-- Collections Grid -->
                <ItemsControl ItemsSource="{Binding Collections}"
                            Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <controls:WrapPanel Orientation="Horizontal" MaxWidth="680"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:Collection">
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="8"
                                  Padding="16"
                                  Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Collection Cover Image -->
                                <Image Grid.Row="0"
                                       Source="{Binding CoverPicture}"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <!-- Collection Name -->
                                <TextBlock Grid.Row="1"
                                         Text="{Binding Name}"
                                         Style="{ThemeResource BodyStrongTextBlockStyle}"
                                         HorizontalAlignment="Center"
                                         Margin="0,12,0,8"/>

                                <!-- Bottom Section with Date and Delete Button -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Creation Date -->
                                    <TextBlock Grid.Column="0"
                                             Text="{Binding CreatedAt, Converter={StaticResource DateOnlyToStringConverter}}"
                                             Style="{ThemeResource BodyTextBlockStyle}"
                                             VerticalAlignment="Center"/>

                                    <!-- Delete Button -->
                                    <Button Content="Delete Collection"
                                            Click="DeleteCollection_Click"
                                            CommandParameter="{Binding CollectionId}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1"
                      IsActive="{Binding IsLoading}"
                      Width="50"
                      Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>

        <!-- Error Message -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ErrorMessage}"
                   Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
    </Grid>
</Page>
