<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.ConfigurationsView.AccountSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views.ConfigurationsView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Width="400" Spacing="15">
            <TextBlock Text="Account Settings" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Modify Email Section -->
            <TextBlock Text="Modify Email" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="EmailText" Width="250" PlaceholderText="New email" TextChanged="ValidEmail"
                        Text="{x:Bind ViewModel.Email, Mode=TwoWay}"/>
                <Button Content="Update" Width="100" Click="UpdateEmail_Click"/>
            </StackPanel>
            <TextBlock Text="Insert a valid email address" Foreground="Red"
                    Visibility="{x:Bind ViewModel.EmailErrorMessageVisibility, Mode=OneWay}"/>

            <!-- Modify Username Section -->
            <TextBlock Text="Modify Username" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox x:Name="UsernameText" Width="250" PlaceholderText="New username" TextChanged="ValidUsername"
                                                 Text="{x:Bind ViewModel.Username, Mode=TwoWay}"/>

                <Button Content="Update" Width="100"  Click="UpdateUsername_Click"/>
            </StackPanel>
            <TextBlock Text="Insert a valid username" Foreground="Red"
           Visibility="{x:Bind ViewModel.UsernameErrorMessageVisibility, Mode=OneWay}"/>

            <!-- Modify Password Section -->
            <TextBlock Text="Modify Password" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <PasswordBox x:Name="PasswordText" Width="250" PlaceholderText="New password" PasswordChanged="ValidPassword"
                                                     Password="{x:Bind ViewModel.Password, Mode=TwoWay}"/>

                <Button Content="Update" Width="100" Click="UpdatePassword_Click"/>
            </StackPanel>
            <TextBlock Text="Insert a valid password" Foreground="Red"
           Visibility="{x:Bind ViewModel.PasswordErrorMessageVisibility, Mode=OneWay}"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="20" >
                <Button Content="Log out" Width="200" Height="40" Foreground="Red"/>
                <Button Content="Delete Account" Width="200" Height="40" Foreground="Red"/>
                <Button Content="Cancel" Width="200" Height="40" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
