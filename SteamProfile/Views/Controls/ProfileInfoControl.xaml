<UserControl
    x:Class="SteamProfile.Views.Controls.ProfileInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SteamProfile.ViewModels"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="TransparentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Profile Picture and Basic Info -->
        <Grid Height="300" Background="#333333">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <PersonPicture Width="150" Height="150"/>
                <TextBlock Text="{x:Bind ViewModel.Username, Mode=OneWay}"
                         Foreground="White"
                         FontSize="24"
                         HorizontalAlignment="Center"/>
                <Button Style="{StaticResource TransparentButton}"
                        Padding="0"
                        Command="{x:Bind ViewModel.ShowFriendsCommand, Mode=OneWay}">
                    <Border Background="#E6D5B8" 
                            Padding="15,5" 
                            CornerRadius="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="No. friends: "
                                     FontSize="14"/>
                            <TextBlock Text="{x:Bind ViewModel.FriendCount, Mode=OneWay}"
                                     FontSize="14"/>
                        </StackPanel>
                    </Border>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Bio Section -->
        <Grid Height="100" Background="#404040">
            <StackPanel Margin="20,10">
                <TextBlock Text="Bio"
                         Foreground="White"
                         FontSize="20"/>
                <TextBlock Text="{x:Bind ViewModel.Bio, Mode=OneWay}"
                         Foreground="White"
                         FontSize="14"
                         TextWrapping="Wrap"
                         Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl> 