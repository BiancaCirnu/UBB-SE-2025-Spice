<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SteamProfile.ViewModels"
    mc:Ignorable="d"
    Background="#1A1A1A">

    <!-- Style Resources -->
    <Page.Resources>
        <Style x:Key="TransparentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0" Background="#2D2D2D">
            <!-- Profile Info -->
            <StackPanel>
                <!-- Profile Picture and Basic Info -->
                <Grid Height="300" Background="#333333">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                        <PersonPicture Width="150" Height="150"/>
                        <TextBlock Text="{x:Bind ViewModel.Username, Mode=OneWay}"
                                 Foreground="White"
                                 FontSize="24"
                                 HorizontalAlignment="Center"/>
                        <Button Style="{StaticResource TransparentButton}"
                                Padding="0"
                                Command="{x:Bind ViewModel.ShowFriendsCommand}">
                            <Border Background="#E6D5B8" 
                                    Padding="15,5" 
                                    CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="No. friends: "
                                             FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.FriendCount, Mode=OneWay}"
                                             FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Bio Section -->
                <Grid Height="100" Background="#404040">
                    <StackPanel Margin="20,10">
                        <TextBlock Text="Bio"
                                 Foreground="White"
                                 FontSize="20"/>
                        <TextBlock Text="{x:Bind ViewModel.Bio, Mode=OneWay}"
                                 Foreground="White"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Achievement Icons -->
                <Grid>
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Show All button -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Achievements" 
                                     Foreground="White" 
                                     FontSize="20" 
                                     VerticalAlignment="Center"/>
                            <Button Content="Show all" 
                                    Style="{StaticResource TransparentButton}"
                                    Foreground="White"
                                    Command="{x:Bind ViewModel.ShowAllAchievementsCommand}"
                                    HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Achievement Icons Grid -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Row="0" Grid.Column="0" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="0" Grid.Column="1" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="1" Grid.Column="0" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="1" Grid.Column="1" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="2" Grid.Column="0" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="2" Grid.Column="1" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="3" Grid.Column="0" Fill="#666666" Width="60" Height="60" Margin="5"/>
                            <Ellipse Grid.Row="3" Grid.Column="1" Fill="#666666" Width="60" Height="60" Margin="5"/>
                        </Grid>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top right buttons -->
            <StackPanel Grid.Row="0" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      Margin="0,20,20,20">
                <!-- Money display -->
                <Button Style="{StaticResource TransparentButton}"
                        Margin="0,0,10,0"
                        Padding="0"
                        Command="{x:Bind ViewModel.ShowMoneyCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <Border Background="#E6D5B8" 
                            Padding="15,5" 
                            CornerRadius="5">
                        <TextBlock Text="Money" 
                                 FontSize="14"/>
                    </Border>
                </Button>

                <!-- Points display -->
                <Button Style="{StaticResource TransparentButton}"
                        Margin="0,0,10,0"
                        Padding="0"
                        Command="{x:Bind ViewModel.ShowPointsCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <Border Background="#E6D5B8" 
                            Padding="15,5" 
                            CornerRadius="5">
                        <TextBlock Text="No. points" 
                                 FontSize="14"/>
                    </Border>
                </Button>

                <!-- Settings button -->
                <Button Style="{StaticResource TransparentButton}"
                        Command="{x:Bind ViewModel.EditProfileCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                             Glyph="&#xE713;"
                             Foreground="White"/>
                </Button>
            </StackPanel>

            <!-- Collections Header -->
            <TextBlock Grid.Row="1" 
                      Text="Collections"
                      Foreground="White"
                      FontSize="24"
                      Margin="0,0,0,20"/>

            <!-- Collections Grid -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Add Collection Button -->
                <Border Grid.Column="0"
                        Background="#E6D5B8" 
                        Width="200" Height="150"
                        Margin="10"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <Button Style="{StaticResource TransparentButton}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Command="{x:Bind ViewModel.AddCollectionCommand}">
                        <TextBlock Text="+" 
                                 FontSize="48" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Button>
                </Border>

                <!-- Collection Cover Photos -->
                <Border Grid.Column="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource BoolToGridColumnConverter}}"
                        Background="#E6D5B8" 
                        Width="200" Height="150"
                        Margin="10">
                    <TextBlock Text="Cover photo" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Column="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource BoolToNextGridColumnConverter}}"
                        Background="#E6D5B8" 
                        Width="200" Height="150"
                        Margin="10">
                    <TextBlock Text="Cover photo" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>

                <Border Grid.Column="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource BoolToLastGridColumnConverter}}"
                        Background="#E6D5B8" 
                        Width="200" Height="150"
                        Margin="10">
                    <TextBlock Text="Cover photo" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
