<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SteamProfile.ViewModels"
    xmlns:controls="using:SteamProfile.Views.Controls"
    xmlns:converters="using:SteamProfile.Converters"
    xmlns:views="using:SteamProfile.Views"
    xmlns:local="using:SteamProfile.Converters"
    mc:Ignorable="d"
    Background="#1A1A1A">

    <!-- Style Resources -->
    <Page.Resources>
        <Style x:Key="TransparentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        
        <!-- Add the converters -->
        <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Profile Info -->
                <RowDefinition Height="*"/>
                <!-- Achievements -->
            </Grid.RowDefinitions>

            <!-- Profile Info Section - more compact -->
            <Grid Grid.Row="0">
                <Rectangle Fill="#2D2D2D" />
                <!-- Background for the entire profile section -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Profile picture and features -->
                        <RowDefinition Height="Auto"/>
                        <!-- Username and friends button -->
                        <RowDefinition Height="Auto"/>
                        <!-- Bio section -->
                    </Grid.RowDefinitions>

                    <!-- Profile content using the AdaptiveProfileControl with smaller margins -->
                    <views:AdaptiveProfileControl Grid.Row="0" 
                                  x:Name="ProfileControl" 
                                  ProfilePictureSize="160"
                                  HatSize="80"
                                  PetSize="80"
                                  Margin="0,10,0,0"/>

                    <!-- Username Row - made more compact -->
                    <StackPanel Grid.Row="1" 
                HorizontalAlignment="Center"
                Spacing="5"
                Margin="0,5,0,5">

                        <!-- Friends Count Button -->
                        <Button Style="{StaticResource TransparentButton}"
                Padding="0"
                Command="{x:Bind ViewModel.ShowFriendsCommand, Mode=OneWay}"
                HorizontalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                            <Border Background="#E6D5B8" 
                    Padding="10,3" 
                    CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="No. friends: "
                               FontSize="12"/>
                                    <TextBlock Text="{x:Bind ViewModel.FriendCount, Mode=OneWay}"
                               FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </Button>

                        <!-- Friend Button (Only visible on the friends page) -->
                        <Button Content="{x:Bind ViewModel.FriendButtonText, Mode=OneWay}"
                Command="{x:Bind ViewModel.ToggleFriendshipCommand}"
                Style="{StaticResource AccentButtonStyle}"
                MinWidth="120"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Bio Section - more compact -->
                    <Grid Grid.Row="2" Background="#80404040" Margin="0,0,0,0">
                        <StackPanel Margin="15,5,15,5">
                            <TextBlock Text="Bio"
                       Foreground="White"
                       FontSize="16"/>
                            <TextBlock Text="{x:Bind ViewModel.Bio, Mode=OneWay}"
                       Foreground="White"
                       FontSize="12"
                       MaxLines="3"
                       TextWrapping="Wrap"
                       Margin="0,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Achievement Icons - adjusted margins -->
            <Grid Grid.Row="1" Margin="10,5,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Show All button -->
                <Grid Grid.Row="0" Margin="0,10,0,5">
                    <TextBlock Text="Achievements" 
                             Foreground="White" 
                             FontSize="16" 
                             VerticalAlignment="Center"/>
                    <Button Content="Show all" 
                            Style="{StaticResource TransparentButton}"
                            Foreground="White"
                            Command="{x:Bind ViewModel.ShowAllAchievementsCommand}"
                            HorizontalAlignment="Right"/>
                </Grid>

                <!-- Achievement Icons Grid -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Achievement Icons -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasGameplayAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCollectionAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasSocialAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasMarketAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCustomizationAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCommunityAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="0" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasEventAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1" Margin="3">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasSpecialAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Back Button -->
            <Button Grid.Row="0"
                    Content="Go Back to Your Profile"
                    Command="{x:Bind ViewModel.BackToProfileCommand}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <!-- Top right buttons -->
            <StackPanel Grid.Row="1" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      Margin="0,20,20,20">
                <!-- Configuration Button -->
                <Button Content="Configuration"
                        Command="{x:Bind ViewModel.ConfigurationCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        MinWidth="120"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Collections Header -->
            <TextBlock Grid.Row="2" 
                      Text="Collections"
                      Foreground="White"
                      FontSize="24"
                      Margin="0,0,0,20"/>

            <!-- Collections Grid -->
            <Grid Grid.Row="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- Add Collection Button -->
                    <Border Background="#E6D5B8" 
                            Width="200" Height="150"
                            Margin="10"
                            Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                        <Button Style="{StaticResource TransparentButton}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Command="{x:Bind ViewModel.AddCollectionCommand}">
                            <TextBlock Text="+" 
                                      FontSize="48" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Button>
                    </Border>
                    <!-- Collections Grid -->
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Collections, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E6D5B8" 
                                        Width="200" Height="150"
                                        Margin="10">
                                    <Image Source="{Binding CoverPicture}" 
                                          Stretch="Uniform" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
        </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>