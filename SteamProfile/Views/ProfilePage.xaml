<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SteamProfile.ViewModels"
    xmlns:controls="using:SteamProfile.Views.Controls"
    mc:Ignorable="d"
    Background="#1A1A1A">

    <!-- Style Resources -->
    <Page.Resources>
        <Style x:Key="TransparentButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0" Background="#2D2D2D">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Profile Info -->
                <RowDefinition Height="*"/> <!-- Achievements -->
            </Grid.RowDefinitions>

            <!-- Profile Info Section -->
            <Grid Grid.Row="0">
                <!-- Profile Picture and Basic Info -->
                <Grid Height="300" Background="#333333">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Profile Picture Row -->
                        <RowDefinition Height="Auto"/> <!-- Username and Friends Row -->
                    </Grid.RowDefinitions>

                    <!-- Profile Picture Row -->
                    <StackPanel Grid.Row="0" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,20,0,10">
                        <!-- Pet Feature -->
                        <Grid Width="100" Height="100" Margin="0,0,20,0"
                              VerticalAlignment="Center">
                            <Image Source="{x:Bind ViewModel.EquippedPet, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}"
                                   Width="100" Height="100"
                                   Stretch="Uniform"/>
                        </Grid>

                        <!-- Profile Picture with Frame and Hat -->
                        <Grid Width="150" Height="150">
                            <!-- Frame would go here -->
                            <PersonPicture Width="150" Height="150"/>
                            <!-- Hat would be positioned at the top of the PersonPicture -->
                            <Image Source="{x:Bind ViewModel.EquippedHat, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}"
                                   Width="60" Height="60"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Center"
                                   Margin="0,-20,0,0"/>
                        </Grid>
                    </StackPanel>

                    <!-- Username and Friends Row -->
                    <StackPanel Grid.Row="1" 
                              HorizontalAlignment="Center"
                              Spacing="10"
                              Margin="0,0,0,20">
                        <!-- Username with Emoji -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center"
                                  Spacing="10">
                            <TextBlock Text="{x:Bind ViewModel.Username, Mode=OneWay}"
                                     Foreground="White"
                                     FontSize="24"/>
                            <Image Source="{x:Bind ViewModel.EquippedEmoji, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}"
                                   Width="30" Height="30"/>
                        </StackPanel>

                        <!-- Friends Count -->
                        <Button Style="{StaticResource TransparentButton}"
                                Padding="0"
                                Command="{x:Bind ViewModel.ShowFriendsCommand, Mode=OneWay}"
                                HorizontalAlignment="Center"
                                Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                            <Border Background="#E6D5B8" 
                                    Padding="15,5" 
                                    CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="No. friends: "
                                             FontSize="14"/>
                                    <TextBlock Text="{x:Bind ViewModel.FriendCount, Mode=OneWay}"
                                             FontSize="14"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Bio Section -->
                <Grid Height="100" Background="#404040" Margin="0,300,0,0">
                    <StackPanel Margin="20,10">
                        <TextBlock Text="Bio"
                                 Foreground="White"
                                 FontSize="20"/>
                        <TextBlock Text="{x:Bind ViewModel.Bio, Mode=OneWay}"
                                 Foreground="White"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Achievement Icons -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Show All button -->
                <Grid Grid.Row="0" Margin="0,20,0,10">
                    <TextBlock Text="Achievements" 
                             Foreground="White" 
                             FontSize="20" 
                             VerticalAlignment="Center"/>
                    <Button Content="Show all" 
                            Style="{StaticResource TransparentButton}"
                            Foreground="White"
                            Command="{x:Bind ViewModel.ShowAllAchievementsCommand}"
                            HorizontalAlignment="Right"/>
                </Grid>

                <!-- Achievement Icons Grid -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Achievement Icons -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasGameplayAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCollectionAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasSocialAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasMarketAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCustomizationAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="1" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasCommunityAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="0" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasEventAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="1" Margin="5">
                        <Image Source="ms-appx:///Assets/100_achievement.jpeg" Stretch="Uniform" Opacity="{x:Bind ViewModel.HasSpecialAchievement, Mode=OneWay, Converter={StaticResource BoolToOpacityConverter}}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top right buttons -->
            <StackPanel Grid.Row="0" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      Margin="0,20,20,20">
                <!-- Money display -->
                <Button Style="{StaticResource TransparentButton}"
                        Margin="0,0,10,0"
                        Padding="0"
                        Command="{x:Bind ViewModel.ShowMoneyCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <Border Background="#E6D5B8" 
                            Padding="15,5" 
                            CornerRadius="5">
                        <TextBlock Text="Money" 
                                 FontSize="14"/>
                    </Border>
                </Button>

                <!-- Points display -->
                <Button Style="{StaticResource TransparentButton}"
                        Margin="0,0,10,0"
                        Padding="0"
                        Command="{x:Bind ViewModel.ShowPointsCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <Border Background="#E6D5B8" 
                            Padding="15,5" 
                            CornerRadius="5">
                        <TextBlock Text="No. points" 
                                 FontSize="14"/>
                    </Border>
                </Button>

                <!-- Settings button -->
                <Button Style="{StaticResource TransparentButton}"
                        Command="{x:Bind ViewModel.ConfigurationCommand}"
                        Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                             Glyph="&#xE713;"
                             Foreground="White"/>
                </Button>
        </StackPanel>

            <!-- Collections Header -->
            <TextBlock Grid.Row="1" 
          Text="Collections"
          Foreground="White"
          FontSize="24"
          Margin="0,0,0,20"/>

            <!-- Collections Grid -->
            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- Add Collection Button -->
                    <Border Background="#E6D5B8" 
                Width="200" Height="150"
                Margin="10"
                Visibility="{x:Bind ViewModel.IsOwner, Mode=OneWay}">
                        <Button Style="{StaticResource TransparentButton}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind ViewModel.AddCollectionCommand}">
                            <TextBlock Text="+" 
                           FontSize="48" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                        </Button>
                    </Border>

                    <!-- Collections Grid -->
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Collections, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E6D5B8" 
                            Width="200" Height="150"
                            Margin="10">
                                    <Image Source="{Binding CoverPicture}" 
                               Stretch="Uniform" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>