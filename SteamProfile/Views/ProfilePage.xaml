<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SteamProfile.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Spacing="10"
                    Padding="40"
                    MaxWidth="400">

            <TextBlock Text="Your Profile"
                       Style="{ThemeResource TitleLargeTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Padding="0,0,0,20"/>

            <TextBlock Text="{x:Bind ViewModel.CurrentUser.Username, Mode=OneWay}"
                      Style="{ThemeResource SubtitleTextBlockStyle}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" 
                      Spacing="8"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0">
                <Button Content="Configurations"
                        Click="ConfigurationsButton_Click"
                        Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="View Collections"
                        Click="ViewCollections_Click"
                        Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>

            <Button Content="Logout"
                    Command="{x:Bind ViewModel.LogoutCommand, Mode=OneWay}"
                    Style="{ThemeResource TextBlockButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>