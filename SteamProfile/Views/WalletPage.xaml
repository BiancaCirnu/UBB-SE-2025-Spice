<Page
    x:Class="SteamProfile.Views.WalletPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SteamProfile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Money Section -->
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="60">
                <TextBlock Text="Money" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="8329" FontSize="30" HorizontalAlignment="Center" x:Name="moneyTextBox"/>
                <Button Content="Add money" Click="AddMoneyButton_Click" Margin="10" Padding="10"/>
            </StackPanel>
        </Border>

        <!-- Points Section -->
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="60">
                <TextBlock Text="Points" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="3872" FontSize="30" HorizontalAlignment="Center" x:Name="pointsTextBox"/>
                <Button Content="Add Points" Click="AddPointsButton_Click" Margin="10" Padding="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
